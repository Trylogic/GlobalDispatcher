<?xml version="1.0" encoding="UTF-8"?><project name="FlexSDKDownloader" basedir=".">	<property name="FLEX_VERSIONS_HOME" value="${user.home}/.flexsdk/" />	<condition property="isMac">		<os family="mac" />	</condition>	<condition property="isWindows">		<os family="windows" />	</condition>	<target name="downloadFlexSDKForAll" unless="${sdkDownloaded}">		<mkdir dir="${FLEX_HOME}" />		<get src="${sdkURL}" dest="${FLEX_VERSIONS_HOME}/${flex.download.version}.zip" skipexisting="true" />		<unzip src="${FLEX_VERSIONS_HOME}/${flex.download.version}.zip" dest="${FLEX_HOME}" overwrite="false" />	</target>	<target name="downloadAirSDK" depends="downloadAirForWindows, downloadAirForMac" unless="${sdkDownloaded}">	</target>	<target name="downloadAirForWindows" if="isWindows" unless="${sdkDownloaded}">		<get src="${airURLWin}" dest="${FLEX_VERSIONS_HOME}/AIR${air.download.version}.zip" skipexisting="true" />		<unzip src="${FLEX_VERSIONS_HOME}/AIR${air.download.version}.zip" dest="${FLEX_HOME}" overwrite="true" />	</target>	<target name="downloadAirForMac" if="isMac" unless="${sdkDownloaded}">		<get src="${airURLMac}" dest="${FLEX_VERSIONS_HOME}/AIR${air.download.version}.tbz2" skipexisting="true" />		<untar src="${FLEX_VERSIONS_HOME}/AIR${air.download.version}.tbz2" dest="${FLEX_HOME}" overwrite="true" compression="bzip2" />	</target>	<macrodef name="downloadFlexSDK">		<attribute name="branch" />		<attribute name="version" />		<sequential>			<property name="flex.download.version" value="@{version}" />			<property name="FLEX_HOME" value="${user.home}/.flexsdk/${flex.download.version}" />			<property name="sdkURL" value="http://fpdownload.adobe.com/pub/flex/sdk/builds/flex4.6/${flex.download.version}.zip" />			<condition property="sdkDownloaded">				<available file="${FLEX_HOME}" type="dir" />			</condition>			<antcall target="FlexSDKDownloader.downloadFlexSDKForAll" />			<taskdef file="${FLEX_HOME}/ant/flexTasks.tasks" classpath="${FLEX_HOME}/ant/lib/flexTasks.jar" />		</sequential>	</macrodef>	<macrodef name="downloadFlexSDKWithAir">		<attribute name="branch" />		<attribute name="version" />		<attribute name="airversion" />		<sequential>			<property name="air.download.version" value="@{airversion}" />			<property name="flex.download.version" value="@{version}" />			<property name="FLEX_HOME" value="${user.home}/.flexsdk/${flex.download.version}+AIR${air.download.version}" />			<property name="airURLWin" value="http://airdownload.adobe.com/air/win/download/${air.download.version}/AdobeAIRSDK.zip" />			<property name="airURLMac" value="http://airdownload.adobe.com/air/mac/download/${air.download.version}/AdobeAIRSDK.tbz2" />			<property name="sdkURL" value="http://fpdownload.adobe.com/pub/flex/sdk/builds/flex4.6/${flex.download.version}.zip" />			<condition property="sdkDownloaded">				<available file="${FLEX_HOME}" type="dir" />			</condition>			<antcall target="FlexSDKDownloader.downloadFlexSDKForAll" />			<antcall target="FlexSDKDownloader.downloadAirSDK" />			<taskdef file="${FLEX_HOME}/ant/flexTasks.tasks" classpath="${FLEX_HOME}/ant/lib/flexTasks.jar" />		</sequential>	</macrodef></project>